<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f7f6"
    android:orientation="vertical"
    tools:context=".VoiceActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="95dp"
        android:text="목소리를 들려주세요!"
        android:textColor="#9A8E77"
        android:textSize="20sp" />

    <android.widget.Button
        android:id="@+id/recordBtn"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/mic"
        android:backgroundTint="#9A8E77"
        android:contentDescription='"녹음 기능"'
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/playBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="125dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/play"
            android:backgroundTint="#9A8E77"
            android:contentDescription='"재생"'
            tools:ignore="TouchTargetSizeCheck" />

        <android.widget.Button
            android:id="@+id/pauseBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/pause"
            android:backgroundTint="#9A8E77"
            android:contentDescription='"중지"'
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <android.widget.Button
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_back"
        android:minHeight="45dp"
        android:text="전송"
        android:textColor="#9A8E77"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />

</LinearLayout>